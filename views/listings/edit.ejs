<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-4">
        <div class="col-8 offset-2" style="color: #212529; font-weight: 700;">
            <h3 style="color: #373032; font-weight: 700; margin-bottom: 2rem;">Edit your Listing: </h3>
            <form class="edit-form mb-5" method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="col mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="col mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea style="font-size: 13.5px; font-weight: 500; color: #222222d9;" id="description" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a description!</div>
                </div>
                <div class="col mb-3">
                    Original Image <br>
                    <img src="<%= originalImageUrl %>" alt="current-image" style="height: 200px; width: 200px;">
                </div>
                <div class="col mb-3">
                    <label for="url" class="form-label">Upload Image</label>
                    <input type="file" id="url" name="listing[image]" class="form-control">
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">Country name should be valid!</div>
                    </div>
                </div>
                <div class="col mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid!</div>
                </div>
                <button class="btn btn-dark mb-3 mt-4 edit-btn">Edit</button>
                <a href="/listings" class="nav-link">

                    <button class="btn btn-outline-dark mb-3 w-100 d-flex justify-content-center align-items-center gap-2" style="font-size: 13.5px; font-weight: 500;">
                        <i class="fa-solid fa-arrow-left mt-1"></i>
                        <span>Go Back</span>
    
                    </button>
                </a>
            </form>
        </div>
    </div>
</body>
