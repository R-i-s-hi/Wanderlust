<% layout("/layouts/boilerplate") -%>
<body>

    <div class="d-flex justify-content-center align-items-center mt-2"> 
        <div class="listing-single-card">
            <div class="d-flex justify-content-start align-items-center my-3 mb-4 gap-3">
                <div>
                    <a href="/listings" class="nav-link fs-4 mt-1"><i class="fa-solid fa-angle-left"></i></a>
                </div>
                <div>
                    <h3 class="mb-0" style="color: #373032; font-weight: 700;"><%= listing.title %></h3>
                </div>
            </div>
            <img src="<%= listing.image.url %>" style="height: 20rem;" class="card-img-top" alt="listing-image">
            <p class="card-text" style="font-size: small;"><i> Owned by @<%= listing.owner.username %></i></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">
                &#8377; <%= listing.price.toLocaleString('en-IN') %>
                <i class="tax-info"> &nbsp;-&nbsp; <b>&#8377; <%= listing.price + (18*listing.price/100)  %> (after tax)</b></i>
            </p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
            <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="btns mb-3">
                    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
                    <form class="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark del-btn">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
    
    <hr>

    <div class="map-container">
        <div id="map">
        </div>
    </div>

    <div class="reviews-section" style="color: #212529ed; font-weight: 700;">
        <% if (currUser) { %>
            <h4 style="color: #373032; font-weight: 700;">Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation mb-3">
                <div class="mb-3 mt-4">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-growRotate"> 
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea style="font-size: 13.5px; font-weight: 500; color: #222222d9;" name="review[comment]" id="comment" cols="30" rows="4" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments!</div>
                </div>
                <button class="btn btn-dark mb-3 px-4 rounded-3 fw-semibold" style="font-size: 13px;">Submit</button>
            </form>
        <% } %>
        <% if (listing.reviews.length !== 0) { %>
            <h4 style="color: #373032; font-weight: 700; margin-block: 1.6rem;">All Reviews</h4>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-3 mb-5">
                <% for (review of listing.reviews) { %>
                    <div class="col">
                        <div class="card h-auto review-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title">
                                        <b>@<%= review.author.username %></b>
                                    </h5>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-dark btn-sm del-btn">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="p-2">
                                    <p class="card-text mb-2"><%= review.comment %></p>
                                    <p class="starability-result card-text mb-0" data-rating="<%= review.rating %>"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
        <% if (listing.reviews.length === 0) { %>
            <h4 class="mb-5">No Reviews Yet!</h4>
        <% } %>
    </div>


